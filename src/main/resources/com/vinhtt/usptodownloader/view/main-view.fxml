<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vinhtt.usptodownloader.view.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="USPTO Patent Downloader" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Query:"/>
        <TextField fx:id="txtQuery" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Output Folder:"/>
        <TextField fx:id="txtDir" editable="false" HBox.hgrow="ALWAYS"/>
        <Button text="..." onAction="#onBrowseDir"/>
    </HBox>

    <Button fx:id="btnRun" text="Search &amp; Download" onAction="#onRun" prefWidth="200"/>

    <ProgressBar fx:id="progressBar" prefWidth="400" progress="0.0"/>

    <Label fx:id="lblStatus" text="Ready"/>
</VBox>